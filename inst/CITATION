         journal = "The R Journal",
         volume = "5",
         number = "1",
         pages = "87-97",
         textVersion = "Thiem, Alrik and Adrian Dusa (2013). QCA: A Package for 
         Qualitative Comparative Analysis. The R Journal 5(1):87-97.")
         
                             
